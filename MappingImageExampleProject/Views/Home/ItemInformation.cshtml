<form id="frmItemInformation" autocomplete="off" method="post">

    <div class="card-body" style="display: block;">

        <div class="form-row">
            <div class="form-group col-sm-6">
                <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Plane Ident/Tag No</span>
                <input type="text" id="addTagTagNo" class="form-control">
            </div>

            <div class="form-group col-sm-6">
                <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Original Ident/Serial No</span>
                <input type="text" id="addTagSerialNo" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-12">
                <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Component Type</span>
                <select class="form-control select2bs4 select2-hidden-accessible" id="addTagComponentType">
                    <option>Select</option>
                    <option>Stone</option>
                    <option>Pebble</option>
                    <option>Pumice</option>
                    <option>Flint</option>
                    <option>Gravel</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-12">
                <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Comments</span>
                <textarea id="addTagComments" class="form-control" style="min-height: 40px; width: 100%; max-height: 350px" maxlength="1000" rows="2"></textarea>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-12">
                <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Specification</span>
                <select class="form-control select2bs4 select2-hidden-accessible" id="addTagSpecification">
                    <option>Select</option>
                    <option>Stone</option>
                    <option>Pebble</option>
                    <option>Pumice</option>
                    <option>Flint</option>
                    <option>Gravel</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-12">
                <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Fitting Type</span>
                <select class="form-control select2bs4 select2-hidden-accessible" id="addTagFittingType">
                    <option>Select</option>
                    <option>Stone</option>
                    <option>Pebble</option>
                    <option>Pumice</option>
                    <option>Flint</option>
                    <option>Gravel</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-12">
                <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Field/Shop Weld</span>
                <select class="form-control select2bs4 select2-hidden-accessible" id="addTagFieldShopWeld">
                    <option>Select</option>
                    <option>Stone</option>
                    <option>Pebble</option>
                    <option>Pumice</option>
                    <option>Flint</option>
                    <option>Gravel</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-6">
                <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Pipe OD (in)</span>
                <input type="text" id="addTagPipeOD" class="form-control">
            </div>

            <div class="form-group col-sm-6">
                <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Pipe Thickness (mm)</span>
                <input type="text" id="addTagPipeThickness" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-6">
                <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Operating Temp (C)</span>
                <input type="text" id="addTagOperatingTemp" class="form-control">
            </div>

            <div class="form-group col-sm-6">
                <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Operating Pressute (BAR)</span>
                <input type="text" id="addTagOperatingPressute" class="form-control">
            </div>
        </div>

    </div>
    <hr />
    <div class="float-right">
        <button id="btnAddSpecification" type="button" class="btn btn-primary" style="border:none;border-radius:0px">Kaydet</button>
    </div>
</form>